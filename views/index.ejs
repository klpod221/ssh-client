<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SSH terminal</title>

    <!-- xterm.js and fit addon -->
    <link rel="stylesheet" href="/xterm/css/xterm.css" />
    <script src="/xterm/lib/xterm.js"></script>
    <script src="/xterm/lib/addons/fit/fit.js"></script>

    <!-- jquery -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>

    <!-- socket.io -->
    <script src="https://cdn.socket.io/3.0.1/socket.io.min.js"></script>

    <!-- custom js -->
    <script src="/js/script.js"></script>

    <!-- custom css -->
    <link rel="stylesheet" href="/css/style.css" />

    <!-- font awesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css"
    />
  </head>
  <body>
    <div class="page-container">
      <header class="terminal-header">
        <h1 class="terminal-header-left">SSH Client</h1>

        <div class="terminal-header-center">
          <button id="reconnect">
            <i class="fas fa-sync-alt"></i> Reconnect
          </button>

          <button id="disconnect">
            <i class="fas fa-power-off"></i> Disconnect
          </button>

          <button id="new-connect">
            <i class="fas fa-plus"></i> New Connect
          </button>
        </div>

        <div class="terminal-header-right">
          <a
            href="https://github.com/klpod221/ssh-terminal"
            target="_blank"
            rel="noopener noreferrer"
          >
            <i class="fab fa-github"></i>
          </a>
        </div>
      </header>

      <div id="terminal"></div>

      <footer class="terminal-footer">
        Made with <i class="fas fa-heart"></i> by
        <a
          href="https://github.com/klpod221"
          target="_blank"
          rel="noopener noreferrer"
          >klpod221</a
        >
      </footer>
    </div>

    <div class="status">
      <div class="status-header">
        <h3>SSH Info
        <button class="close-status" id="close-status">
          <i class="fas fa-chevron-up"></i>
        </button>
      </div>

      <div class="status-body" id="status">
        <p>Host: <span class="ssh-host"></span></p>
        <p>Port: <span class="ssh-port"></span></p>
        <p>Username: <span class="ssh-username"></span></p>
      </div>
    </div>

    <div class="modal-background" id="modal-background"></div>

    <div class="modal" id="modal">
      <div class="modal-header">
        <h2>Connect to SSH</h2>
        <button class="modal-close close-modal">
          <i class="fas fa-times"></i>
        </button>
      </div>

      <div class="modal-body">
        <form id="connect-form">
          <div class="form-group">
            <label for="host">Host</label>
            <input
              type="text"
              id="host"
              name="host"
              placeholder="Host"
              required
              autocomplete="off"
              value="localhost"
            />
            <span class="error-msg" id="host-error"></span>
          </div>

          <div class="form-group">
            <label for="port">Port</label>
            <input
              type="number"
              id="port"
              name="port"
              placeholder="Port"
              required
              autocomplete="off"
              value="22"
            />
            <span class="error-msg" id="port-error"></span>
          </div>

          <div class="form-group">
            <label for="username">Username</label>
            <input
              type="text"
              id="username"
              name="username"
              placeholder="Username"
              required
              autocomplete="off"
              value="klpod221"
            />
            <span class="error-msg" id="username-error"></span>
          </div>

          <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              placeholder="Password"
              autocomplete="off"
              value="klpod221"
            />
            <span class="error-msg" id="password-error"></span>
          </div>

          <div class="form-group inline">
            <label for="isSave">Save connection</label>
            <label class="switch">
              <input type="checkbox" id="isSave" name="isSave" checked />
              <span class="slider"></span>
            </label>
          </div>
        </form>
      </div>

      <div class="modal-footer">
        <button class="modal-cancel close-modal" id="cancel">Cancel</button>
        <button class="modal-connect" id="connect">Connect</button>
      </div>
    </div>
  </body>
</html>
